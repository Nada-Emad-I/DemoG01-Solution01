@model IEnumerable<RoleViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>All Roles</h1>
<br />
<br />

<form asp-action="Index" class="m-5">
    <div class="row">
        <div class="col-8">
            <input name="searchInput" id="searchInput" type="text" placeholder="Search..." class="form-control" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-success" />
        </div>

    </div>
</form>

<a asp-action="Create" class="btn btn-primary">Create Role</a>
<br />
<br />


@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Id)</th>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <partial name="_ButtonsPartialView" model="@role.Id" />
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@role.Id">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-warning">
        <h4>There is No Roles :(</h4>
    </div>
}



